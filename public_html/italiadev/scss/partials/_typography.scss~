a {
	position       : relative;
	font-family    : 'SubHeadAlt', 'SubHead', Arial, sans-serif;
	color          : white;
	letter-spacing : 0.15em;
	text-decoration: none;
	padding        : 0;
	cursor         : pointer;

	&:not(.navLink) {
		border-bottom: 0.1em solid;
		opacity      : 0.6;
		transition   : opacity 0.2s !important;
	}

	&:hover {
		opacity: 1;
	}
}

.navLink {
	border-bottom      : none;
	opacity            : 1;
	backface-visibility: hidden;

	&::before {
		content         : '';
		position        : absolute;
		width           : 100%;
		height          : 0.2em;
		top             : 1.1em;
		left            : 0;
		background-color: $color5;
		visibility      : hidden;
		mix-blend-mode  : multiply;
		transform-origin: left;
		transform       : scaleX(0);
		transition      : all 0.2s ease-in-out;
		@include respond-to(tablet) {
			height: 0.1em;
		}
	}

	&:hover {
		&::before {
			visibility: visible;
			transform : scaleX(1);
		}
	}
}

